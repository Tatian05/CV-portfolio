---
import Section from "../Section.astro";
import Star from "@/icons/Start.astro"

import { projects } from "@/cv-es.json"
---

<Section title="Proyectos">
    <ul class="grid">
        {
            projects.map(({name, isActive, url, description, highlights, technologies}) => {
                return(
                    <li>
                        <article>
                            <header>
                                <a
                                href={url} 
                                target="_blank"
                                title={`View project ${name}`}>
                                <h3>{name}</h3>
                                </a>
                                <p>{description}</p>
                            </header>
                            <footer>
                                <div class="technologies">
                                    {
                                        technologies.map((technologie)=>{
                                            return(<span>{technologie}</span>)
                                        })
                                    }
                                </div>
                                    {
                                        highlights && highlights.map((highlight) =>{
                                            return(<span><Star/>{highlight}</span>)
                                        })
                                    }   
                            </footer>
                        </article>
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    .grid{
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1rem;
    }

    article{
        border-radius: 8px;
        border: 1px solid #aaa;
        gap: 16px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;
    }

    article header{
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    article h3{
        margin-bottom: 4px;
    }

    article p{
        font-size: .75rem;
        line-height: 1.2rem;
    }

    article a{
        text-decoration: none;
        color:#111;
    }

    article a:hover{
        text-decoration: underline;
    }

    footer{
        display: inline-flex;
        flex-direction: column;
        gap: 4px;
    }

    .technologies{
        display: flex;
        gap: 8px;
    }

    footer span{
        display: flex;
        align-items: center;
        gap: 4px;
        background: #eee;
        border-radius: 6px;
        padding: .2rem .6rem;
        font-size: .8rem;
        font-weight: 500;
        color: black;
    }

</style>